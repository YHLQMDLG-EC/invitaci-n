<!-- Script final -->
<script src="https://cdn.jsdelivr.net/npm/canvas-confetti@1.5.1/dist/confetti.browser.min.js"></script>
<script>
  function mostrarPantalla(numero) {
    document.getElementById('pantalla1').classList.add('hidden');
    document.getElementById('pantalla2').classList.add('hidden');
    document.getElementById('pantalla3').classList.add('hidden');
    document.getElementById('pantalla' + numero).classList.remove('hidden');
  }

  function bloqueado(btn) {
    const xMark = btn.querySelector('.bloqueo');
    xMark.classList.remove('hidden');
    document.getElementById('error-sound').play();
    setTimeout(() => { xMark.classList.add('hidden'); }, 1500);
  }

  function rechazarInvitacion() {
    const rechazo = document.getElementById('rechazoX');
    rechazo.classList.remove('hidden');
    document.getElementById('error-sound').play();
    setTimeout(() => { rechazo.classList.add('hidden'); }, 1500);
  }

  function aceptarInvitacion() {
    const canvas = document.getElementById('confetti-canvas');
    canvas.classList.remove('hidden');
    const myConfetti = confetti.create(canvas, { resize: true, useWorker: true });
    myConfetti({
      particleCount: 200,
      spread: 180,
      origin: { x: 0.5, y: 0.5 }
    });
    document.getElementById('confetti-sound').play();
    const toast = document.getElementById("toast");
    toast.textContent = "¡Perfecto! ¡Acertaste!";
    toast.classList.add("show");
    setTimeout(() => { toast.classList.remove("show"); }, 4000);
  }
</script>

